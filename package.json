{
  "name": "@firebolt-js/schemas",
  "version": "0.1.0-alpha.1",
  "description": "Firebolt schemas for configuration and global types",
  "files": [
    "src/schemas/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rdkcentral/firebolt-schemas.git"
  },
  "scripts": {
    "validate": "node src/scripts/validate.js",
    "generate": "firebolt-openrpc --task specification -b src/json/firebolt-specification-base.json --sdk core --sdk discovery --sdk manage -o build/firebolt-specification.json"
  },
  "author": "",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/rdkcentral/firebolt-schemas/issues"
  },
  "homepage": "https://github.com/rdkcentral/firebolt-schemas#readme",
  "dependencies": {
    "ajv": "^8.9.0",
    "ajv-formats": "^2.1.1",
    "standard": "^16.0.4"
  },
  "devDependencies": {
    "@firebolt-js/openrpc": "../firebolt-openrpc",
    "@firebolt-js/sdk": "../firebolt-core-sdk",
    "@firebolt-js/manage": "../firebolt-manage-sdk",
    "@firebolt-js/discovery": "../firebolt-discovery-sdk",
    "nopt": "^5.0.0"
  }
}
